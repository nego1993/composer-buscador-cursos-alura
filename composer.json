{
    "name": "nego1993/buscador-certificados",
    "description": "Projeto para buscar meus certificados no site da Alura",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Nego1993\\BuscadorCertificados\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Julio Cesar",
            "email": "juliocs78383@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.4",
        "symfony/dom-crawler": "^6.0",
        "symfony/css-selector": "^6.0"
    },
    "autoload":{
        "files": [
            "./functions.php"
        ],
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },
    "scripts": {
        "test": "phpunit tests\\TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda todas as verificações em PHAN, PHPCS E PHPUNIT"
    },
    "license": "GPL-3.0",
    "bin": ["buscador-cursos.php"]
}
